escape xy

hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'

screen -t back  0  bash

screen -t front  1  bash

screen -t MAIN 2 zsh
layout new one
select 0
split -v
focus right
select 1
split 
focus down

bind -c rsz 	    eval "focus"       "command -c rsz" # Tab
bind -c rsz -k kl eval "focus left"  "command -c rsz" # Left
bind -c rsz -k kr eval "focus right" "command -c rsz" # Right
bind -c rsz -k ku eval "focus up"    "command -c rsz" # Up
bind -c rsz -k kd eval "focus down"  "command -c rsz" # Down
select 0
stuff "cd /u/lhubbard/cs300/app2/orchestrator/back^M"
stuff "npm run start^M"
select 1
stuff "cd /u/lhubbard/cs300/app2/orchestrator/front^M"
stuff "npm run start^M"
select 2